@model WebApplication5.Models.ProtocolViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Project Description
                    </th>
                <th>
                    Organization
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrgName)
                        </td>

                        <td>
                            <a asp-area="" asp-controller="Task" asp-action="Index" asp-route-id="@item.ProtocolId">Tasks</a> |
                            <a asp-action="Edit" asp-route-id="@item.ProtocolId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProtocolId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProtocolId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
    </html>
