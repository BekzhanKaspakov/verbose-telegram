@model WebApplication5.Models.ProtocolViewModels.CreateViewModel
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Protocol</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrganizationID" class="control-label"></label>
                    <select asp-for="OrganizationID" class="form-control" asp-items="@(new SelectList(Model.Organizations,"Id","OrgName"))"></select>
                </div>
                <ul>
                    @for (int i = 0; i < Model.Filters.Count(); i++)
                    {
                        @Html.CheckBoxFor(m => m.Filters[i].Selected)
                        @Html.HiddenFor(m => m.Filters[i].ID)
                        @Html.LabelFor(m => m.Filters[i].Selected, 
                                            Model.Filters[i].Name)
                        <br />
                    }
                    
                </ul>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
